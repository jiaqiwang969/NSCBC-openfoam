FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    location    "0";
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    leftSide
    {
        type            waveTransmissive;
        gamma           1.4;
        value           uniform (0 0 0);
    }
    rightSide
    {
        type            waveTransmissive;
        gamma           1.4;
        value           uniform (0 0 0);
    }
    emptywalls
    {
        type            empty;
    }
}


